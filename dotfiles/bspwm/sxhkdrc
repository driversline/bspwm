super + {Left,Right}
  bspc desktop -f {prev,next}
super + alt + {Left,Right}
  bspc node -d {prev,next}
ctrl + {Up,Down,Left,Right}
  bspc node -s {north,south,west,east}
super + shift + {Left,Down,Up,Right}
  bspc node -f {west,south,north,east}
