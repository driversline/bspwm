#!/bin/bash
bspc monitor -d I II III IV V
bspc desktop II -f
bspc config focus_follows_pointer true
bspc config border_width 0
bspc config window_gap 0
bspc rule -a Alacritty state=floating, rectangle=800x400+560+340
bspc rule -a firefox state=fullscreen
bspc rule -a code state=fullscreen
bspc config drag_window_mod super
bspc config drag_window_center true
